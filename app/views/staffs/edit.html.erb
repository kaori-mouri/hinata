<div class="main staffs-edit">
  <div class="container">
    <div class="form-heading">スタッフ情報編集</div>
    <div class="form staffs-form">
      <div class="form-body">
          
        <% @staff.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
          
        <%= form_tag("/staffs/#{@staff.id}/update") do %>
            <p>スタッフ名</p>
            <!-- 1行の入力フォームを作成し、nameを初期値として表示してください -->
            <input name="name" value="<%= @staff.name %>">
            <p>属性</p>
          <!-- <input>タグを用いて1行の入力フォームを作成してください -->
            <p>
            <input type="radio" name="type" value="nurse" checked="checked">看護師
    　　　　<input type="radio" name="type" value="pt">理学療法士
    　　　　<input type="radio" name="type" value="ot">機能訓練士
    　　　　<input type="radio" name="type" value="driver">ドライバー
    　　　　</p>
            <input type="submit" value="保存">
        <% end %>
      </div>
    </div>
  </div>
</div>